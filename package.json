{
  "name": "@naturalcycles/ktlint",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "upd": "pnpm up --no-save",
    "ktlint": "resources/ktlint",
    "build": "dev-lib build",
    "test": "dev-lib test",
    "lint": "dev-lib lint",
    "bt": "dev-lib bt",
    "check": "dev-lib check"
  },
  "dependencies": {},
  "devDependencies": {
    "@naturalcycles/dev-lib": "^20",
    "@naturalcycles/js-lib": "^15",
    "@types/node": "^24",
    "husky": "^9",
    "tsx": "^4"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "resources",
    "!src/test",
    "!src/**/*.test.ts",
    "!src/**/__snapshots__",
    "!src/**/__exclude"
  ],
  "bin": {
    "ktlint": "resources/ktlint"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NaturalCycles/ktlint"
  },
  "engines": {
    "node": ">=20.13.0"
  },
  "packageManager": "pnpm@10.23.0",
  "version": "0.0.0",
  "description": "ktlint, conveniently published to npm registry",
  "keywords": [
    "ktlint",
    "npm",
    "published",
    "lint"
  ],
  "author": "Natural Cycles Team",
  "license": "MIT"
}
